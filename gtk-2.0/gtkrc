style "toolbar"
{
    GtkToolbar :: shadow-type = GTK_SHADOW_NONE

	bg[NORMAL]	= @bg_color

    engine "pixmap" {
    image
        {
            function        = HANDLE
            overlay_file    = "assets/handle.png"
            overlay_stretch = FALSE
            orientation     = HORIZONTAL
        }
    image
        {
            function        = HANDLE
            overlay_file    = "assets/handle.png"
            overlay_stretch = FALSE
            orientation     = VERTICAL
        }
    image
        {
            function    = VLINE
            recolorable = TRUE
            file        = "assets/null.png"
        }
    image
        {
            function    = HLINE
            recolorable = TRUE
            file        = "assets/null.png"
        }
    }
}

